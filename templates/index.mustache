<script id="posts_tpl" type="text/html">
    <p>
        <img src="/img/rss.svg" align="absmiddle" width="20px"> <a href="http://{{domain}}/feed.xml?threshold={{threshold}}&day={{day}}&tod={{tod}}">
            http://{{domain}}/feed.xml?threshold={{threshold}}&day={{day}}&tod={{tod}}
        </a>
    </p>

    {{^posts}}
        <p style="font-style: italic;">No posts for this time period</p>
    {{/posts}}
    {{#posts}}
        <article>
            <header>
                <h3 class="post-title"><a href="{{url}}">{{title}}</a> - <span class="post-domain">{{domain}}</span></h3>
            </header>
            <p>
                {{points}} Points 
                | <a href="{{permalink}}">{{num_comments}} Comments</a> 
                | Created on {{rss_date}}
            </p>
        </article>
    {{/posts}}
</script>
